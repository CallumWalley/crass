{% if cv.basics %}
<div id="basics" class="flex">
    {% if options.show_portrait %}
    <div id="portrait" class="">
        <img class="" src="{{ cv.basics.image }}" alt="so handsome and pretty">
        <svg class="" viewBox="0 0 100 100">
            <polyline points="35,13 50,-2 65,13"></polyline>
            <polyline points="35,87 50,102 65,87"></polyline>
            <polyline points="13,35 -2,50 13,65"></polyline>
            <polyline points="87,35 102,50 87,65"></polyline>
            <!-- <polyline points="50,0 100,50 50,100 0,50 50,0"></polyline>
            <polyline points="50,0 100,50 50,100 0,50 50,0"></polyline>
            <polyline points="50,0 100,50 50,100 0,50 50,0"></polyline> -->
        </svg>
    </div>
    {% endif %}
    <div class="tree">
        <div class="flex">
        <h2>{{ cv.basics.name }}</h2><h2>{{ cv.basics.label }}</h2>
        </div>
        <br>
        <div class="flex">
            <div>
                {% for key, value in cv.basics.location.items() %}
                <div>{{value}}</div>
                {% endfor %}
            </div>
            <div class="align-right">
                {% for key, value in cv.basics.contact.items() %}
                <div>{{value}}</div>
                {% endfor %}
            </div>
        </div>
        {# <div class="vline"></div> #}
    </div>
</div>
{% endif %}